{
  "name": "edict",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "lint": "ng lint",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadless",
    "e2e": "ng e2e",
    "e2e:open": "ELECTRON_EXTRA_LAUNCH_ARGS='--disable-gpu --disable-software-rasterizer --no-sandbox --disable-dev-shm-usage --disable-setuid-sandbox' cypress open --e2e",
    "e2e:run": "cypress run --e2e --browser chrome",
    "e2e:run:headed": "cypress run --e2e --browser chrome --headed",
    "e2e:install": "cypress install",
    "coverage": "ng test --watch=false --browsers=ChromeHeadless --code-coverage && node scripts/run-e2e-coverage.js && node scripts/merge-coverage.js"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^20.2.14",
    "@angular/common": "^20.3.16",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@ngzard/ui": "^1.0.0-beta.31",
    "clsx": "^2.1.1",
    "lucide-angular": "^0.575.0",
    "rxjs": "~7.8.0",
    "tailwind-merge": "^3.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.9",
    "@angular/cli": "^20.3.9",
    "@angular/compiler-cli": "^20.3.0",
    "@cypress/code-coverage": "^3.14.7",
    "@cypress/schematic": "^2.5.0",
    "@lcov-viewer/cli": "^1.3.0",
    "@tailwindcss/postcss": "^4.2.0",
    "@types/jasmine": "~5.1.0",
    "angular-eslint": "21.0.1",
    "cypress": "^15.0.0",
    "edict-e2e-coverage-builder": "file:scripts/builders",
    "eslint": "^9.39.1",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lcov-result-merger": "^5.0.1",
    "nyc": "^17.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.2.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.46.4"
  }
}
